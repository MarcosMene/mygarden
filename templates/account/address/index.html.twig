{% extends 'base.html.twig' %}
{% block title %}My Garden -
	My addresses
{% endblock %}

{% block body %}

	<!--BANNER-->
	{% include ('account/banners/_banner_account_addresses.html.twig')%}

	<div
		class="create_products w-full mt-12 flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('account/menu_navigation_user.html.twig')%}
			</div>
		</div>

		<!-- RIGHT CREATE FORM -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-3 md:p-4 lg:p-8 h-fit">

<!--BUTTON CREATE ADDRESS -->
			<div class="create-button text-center md:text-end my-8 md:mt-4 p-0">
				<a href="{{path('account_create_address')}}" class="text-[0.8rem] md:text-[1rem] w-full md:w-fit py-2 px-4  text-base font-medium text-primary  bg-white rounded-sm border border-primary hover:bg-primary hover:text-white transition ease-in-out delay-100 ">Create new address</a>
			</div>

			<!--CARDS-->

			{% if (app.user.addresses|length) == 0 %}

				<div class="flex w-full mx-auto justify-center flex-col items-center">
					<h3 class="text-2xl text-gray-600 font-normal my-3">No address found.</h3>
					<p>Create new address.</p>
				</div>

			{% else %}
				<div class="cards grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mt-4">
					{% for address in app.user.addresses %}

						<!--CARD -->
						{% include ('account/_partials/cardAddressUser.html.twig')%}
					{% endfor %}
				</div>
			{% endif %}
		</aside>
	</div>
	<!-- delete confirmation modal -->
	{% include 'admin/_partials/_delete_modal.html.twig' %}

	<!-- SCRIPT  -->
	<script src="{{ asset('assets/js/admin/modal_delete.js') }}"></script>

{% endblock %}
