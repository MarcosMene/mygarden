{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{ form.vars.value.id ? 'Edit Address' : 'Create New Address' }}
{% endblock %}

{% block body %}

	<!--BANNER-->
	{% include ('account/banners/_banner_account_addresses.html.twig')%}

	<div class="back_to text-end px-8 lg:px-16 mt-6">
		<a href="{{path('account_address')}}" class="text-gray underline text-base  ">Back to my addresses</a>
	</div>
	<div
		class="create_products w-full  flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('account/menu_navigation_user.html.twig')%}
			</div>
		</div>
		<!-- RIGHT CREATE FORM -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-3 md:p-4 lg:p-8 h-fit">

			<!--ERROR MESSAGE-->
			<div id="error_messages" class="hidden text-center p-4 mb-4 text-sm rounded-lg bg-red-100 text-red-700 relative" role="alert"></div>

			{{form_start(form)}}
			<div class="flex flex-col md:flex-row justify-between  gap-1 md:gap-6 lg:gap-12 mb-4">

				<!--NAME OF ADDRESS-->
				<div class="w-full text-base">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
					<div class="form-error">
						{{ form_errors(form.name) }}
						<div id="addressName_error" hidden class="text-sm text-red"></div>
					</div>
				</div>

					<!--USER PHONE NUMBER-->
				<div class="w-full text-base">
					{{ form_label(form.phone) }}
					{{ form_widget(form.phone) }}
					<div class="form-error">
						{{ form_errors(form.phone) }}
						<div id="addressPhone_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

			<!--USER FIRST LAST NAME-->
			<div class="flex flex-col md:flex-row justify-between gap-1 md:gap-6 lg:gap-12 mb-4">
				<div class=" w-full  text-base">
					{{ form_label(form.firstname) }}
					{{ form_widget(form.firstname) }}
					<div class="form-error">
						{{ form_errors(form.firstname) }}
						<div id="addressUserFirstName_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
				<div class=" w-full  text-base">
					{{ form_label(form.lastname) }}
					{{ form_widget(form.lastname) }}
					<div class="form-error">
						{{ form_errors(form.lastname) }}
						<div id="addressUserLastName_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

<!--USER COMPANY OPTIONAL AND ADDRESS-->
			<div class="flex flex-col md:flex-row justify-between gap-1 md:gap-6 lg:gap-12 mb-4">
				<div class=" w-full  text-base">
					{{ form_label(form.company) }}
					{{ form_widget(form.company) }}
					<div class="form-error">
						{{ form_errors(form.company) }}
						<div id="addressUserCompany_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
				<div class=" w-full  text-base">
					{{ form_label(form.address) }}
					{{ form_widget(form.address) }}
					<div class="form-error">
						{{ form_errors(form.address) }}
						<div id="addressUserAddress_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

			<!--USER ZIP CODE AND CITY-->
			<div class="flex flex-col md:flex-row justify-between gap-1 md:gap-6 lg:gap-12 mb-4">
				<div class=" w-full  text-base">
					{{ form_label(form.postal) }}
					{{ form_widget(form.postal) }}
					<div class="form-error">
						{{ form_errors(form.postal) }}
						<div id="addressUserPostal_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
				<div class=" w-full  text-base">
					{{ form_label(form.city) }}
					{{ form_widget(form.city) }}
					<div class="form-error">
						{{ form_errors(form.city) }}
						<div id="addressUserCity_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

			<!-- SUBMIT BUTTON  -->
			<div class="text-center mt-4">
				<button type="submit" id="addressUser_submit" class=" p-2.5 text-sm font-medium text-white bg-primary  border border-primary focus:outline-none focus:ring-primary mt-4">
					{{ form.vars.value.id ? 'Update Address' : 'Create Address' }}
					<span class="sr-only">{{ form.vars.value.id ? 'Update Address' : 'Create Address' }}
						button</span>
				</button>
			</div>
		</div>
		{{form_end(form)}}
	</aside>
</div>
		<!-- VALIDATE CREATE employee WITH JS  -->
		<script src="{{ asset('assets/js/users/createAddressUser.js') }}"></script>

{% endblock %}
