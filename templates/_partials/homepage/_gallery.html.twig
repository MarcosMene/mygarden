<section class=" bg-white">

	<div class="gallery w-full pt-5 lg:pt-12 pb-10 ">
		<h2 class="text-[1.5rem] md:text-[2rem] text-center  text-black font-normal ">Gallery</h2>
		<!--image-->
		<img src="{{asset('assets/images/decoration_text.png')}}" loading="lazy" alt="decoration title" class="mx-auto">

		<div
			class="md:container mx-auto px-8 lg:px-16">

			<!--CARDS-->
			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 mt-16">

				{% for gallery in galleries %}

					<!--CARD-->
					<div
						class="card border border-gray-200">
						{# <img src="{{asset('upload/gallery/gallery1.jpg')}}" loading="lazy" class="w-full group-hover:opacity-75" alt=""/> #}

						<img src="{{ asset('upload/galleries/' ~ gallery.imageName) }}" alt="{{ gallery.name }}" loading="lazy" class="w-full group-hover:opacity-75" ">


					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
