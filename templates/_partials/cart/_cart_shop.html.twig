<!--CART-->
<div
	class="cart w-full min-w-[200px] mt-10 lg:mt-0 lg:w-1/4 flex flex-col bg-gray-50">

	<!--breadcrumb-->
	<div class="flex justify-between ">
		<p>Cart subtotal</p>
	</div>
	<div
		class=" p-2 border border-gray-300 shadow-md">

		{# TOTAL PRODUCTS  #}
		<div class="flex justify-between mb-4">
			<p class="text-black text-base">Total products:
			</p>
			<p class="text-black text-base">{{fullCartQuantity}}</p>
		</div>
		{# SUBTOTAL NO TAX  #}
		<div class="flex justify-between mb-4">
			<p class="text-black text-base">Subtotal no tax:
			</p>
			<p class="text-black text-base">${{(totalCartNt )|number_format(2, '.', ',') }}</p>
		</div>
		{# SUBTOTAL WITH TAX  #}
		<div class="flex justify-between mb-4">
			<p class="text-black text-base">Subtotal with tax:
			</p>
			<p class="text-black text-base">${{totalCartWt|number_format(2, '.', ',')}}</p>
		</div>
		<div class="buttons flex flex-col  mt-8">


			<!--BUTTONS CART-->

			<!--VALIDATE ORDER-->
				<a href="" class="w-full text-center py-2 px-4  mb-4  text-base font-medium text-white  bg-primary rounded-sm border border-primary hover:bg-white hover:text-primary transition ease-in-out delay-100"> Validate my order</a>

			<!--CONTINUE SHOPPING-->
			<a href="" class="w-full text-center py-2 px-4  text-base font-medium text-primary  bg-white rounded-sm border border-primary hover:bg-primary hover:text-white transition ease-in-out delay-100">Continue shopping</a>
		</div>

	</div>
</div>
