<div class="w-[80%] mx-auto">
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="flex justify-between items-center p-4 mb-4 text-sm rounded-lg {{ label == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }} relative" role="alert">
				<span>{{ message }}</span>
				<button type="button" class="ml-auto bg-transparent text-{{ label == 'success' ? 'green' : 'red' }}-500 rounded-lg focus:outline-none" aria-label="Close" onclick="this.parentElement.remove();">
					<svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
					<span class="sr-only">Close</span>
				</button>
			</div>
		{% endfor %}
	{% endfor %}
</div>
