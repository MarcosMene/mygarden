{% extends 'base.html.twig' %}

{% block title %}Forgot password
{% endblock %}

{% block body %}
	<!--BANNER-->
	{% include ('_partials/password/_banner_forgot_password.html.twig')%}

	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<!--LOGIN SECTION-->
	<section class="login w-full pt-5 lg:pt-10 pb-10">
		{# <h2 class="text-[1.5rem] md:text-[2rem] text-center  text-black font-normal">New password</h2> #}

		<!--image-->
		<img src="{{asset('assets/images/decoration_text.png')}}" loading="lazy" alt="decoration title" class="mx-auto my-4"> <div class="container mx-auto px-8 lg:px-16 ">

			<div class="w-full lg:w-1/3 mx-auto login_form bg-gray-50 border border-gray-100 p-4 md:p-12 mt-5 shadow-lg">

				<div class="w-full">

					{{ form_start(forgotPasswordForm) }}


					<div class=" w-full font-medium text-base">
						{{ form_row(forgotPasswordForm.email) }}
						<div id="email_error" hidden class="text-sm text-red"></div>
					</div>


					<!--BUTTON create account-->
					<div class="button_submit w-full ">
						<button type="submit" class="py-2 px-4 w-full  mt-6 hover:bg-white hover:text-primary transition ease-in-out delay-100 uppercase border border-primary text-base font-medium text-white  bg-primary rounded-sm group-invalid:pointer-events-none group-invalid:opacity-60 group-invalid:disabled">
							Send email
						</button>
					</div>
					{{ form_end(forgotPasswordForm) }}
				</div>
				<p class="text-center mt-5 text-gray hover:black">
					You already have an account? Please
					<a href="{{ path('app_login') }}" class="underline hover:text-black">Login</a>
				</p>
			</div>
		</div>
	</section>

	{# VALIDATION FORM JAVASCRIPT#}
	<script src="{{ asset('assets/js/users/forgotPassword.js') }}"></script>
{% endblock %}
