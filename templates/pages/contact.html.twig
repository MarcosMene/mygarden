{% extends 'base.html.twig' %}

{% block title %}Welcome to My Garden
{% endblock %}

{% block body %}

	<!--BANNER-->
	{% include ('_partials/contact/_banner.html.twig')%}

	<section class="contact">

		<div class=" w-full pt-5 lg:pt-12 pb-10">
			<h2 class="text-[1.5rem] md:text-[2rem] text-center  text-black font-normal ">Get in touch!</h2>
			<!--image-->
			<img
			src="{{asset('assets/images/decoration_text.png')}}" loading="lazy" alt="decoration title" class="mx-auto">

			<!--CONTACT FORM-->
			<div class="container mx-auto px-8 lg:px-16 mt-10">
				<div
					class=" bg-white flex justify-center border border-gray-200">
					<!--FORM-->
					<div class="w-full xl:w-1/2 p-6 sm:p-12 ">
						<p class="text-2xl text-center mb-12">Reach out to us, and let's create something beautiful together!</p>
						<form>
							<!--CONTACT NAME-->

							<div class="name w-full">
								<label class="block mb-2 text-sm font-medium text-black mt-4" for="name">
									Name*
								</label>
								<input class=" w-full py-2 px-3 text-sm text-black bg-white rounded-lg border border-gray-300" id="name" type="text" placeholder="Write your name">
							</div>

							<!--CONTACT EMAIL-->
							<div class="email w-full ">
								<label class="block mb-2 text-sm font-medium text-black mt-4" for="email">
									Email*
								</label>
								<input class="appearance-none w-full py-2 px-3 text-sm text-black bg-white rounded-lg border border-gray-300" id="email" type="text" placeholder="Write your email">
							</div>

							<!--CONTACT PHONE-->
							<div class="phone w-full ">
								<label class="block mb-2 text-sm font-medium text-black mt-4" for="phone">
									Phone*
								</label>
								<input class="appearance-none w-full py-2 px-3 text-sm text-black bg-white rounded-lg border border-gray-300" id="phone" type="text" placeholder="Write your phone">
							</div>


							<!--Message-->
							<label for="message" class="block mb-2 text-sm font-medium text-black mt-4">Message*</label>
							<textarea id="message" rows="5" class="block p-2.5 w-full text-sm text-black bg-white rounded-lg border border-gray-300" placeholder="Write your thoughts here..."></textarea>

							<!--SEND A MESSAGE-->
							<div class="contact_message text-center">
								<button type="button" class="py-2 px-4 w-full text-base font-medium text-white  bg-primary rounded-sm  hover:bg-white hover:text-primary transition ease-in-out delay-100 mt-10 uppercase">Send a message</button>
							</div>
						</form>
					</div>
					<div class="w-full xl:w-1/2 text-center hidden md:flex">
						<img src="{{asset('assets/images/contact/contact_image.jpg')}}" loading="lazy" class="w-full object-cover" alt="woman preparing a bouquet on a wicker basket"/></div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
