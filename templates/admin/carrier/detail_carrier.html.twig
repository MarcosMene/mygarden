{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{carrier.name}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_carriers')}}" class="text-gray underline text-base  ">Back to carriers</a>
	</div>
	<div
		class="create_carriers w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>

		<!-- RIGHT CARRIER -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-2 lg:p-8 h-fit">
			<div class="title_form flex  flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Carrier details</h2>
			</div>

			<!-- CARRIER  -->
			<div
				class="detail_carrier_description flex flex-col w-full  px-1 me-0 lg:px-8">

				<!-- NAME -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Name:</p>
					<p class="font-normal text-lg mb-2 ms-1">{{ carrier.name }}</p>
				</div>
				<!-- DESCRIPTION -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Description:</p>
					<p class="font-normal text-lg mb-2 ms-1">{{ carrier.description|raw }}</p>
				</div>
				<!-- PRICE -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Price:</p>
					<p class="font-normal text-lg mb-2 ms-1">${{ carrier.price|number_format(2, '.', ',') }}</p>
				</div>
			</div>
		</aside>
	</div>
{% endblock %}
