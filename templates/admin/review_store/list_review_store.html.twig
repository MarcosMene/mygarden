{% extends 'base.html.twig' %}
{% block title %}My Garden - List of Store reviews
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdminMarginBottom.html.twig') %}

	<div
		class="create_review_reviews w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/4 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>
		<!-- RIGHT FORM -->
		<aside class="w-3/4 md:w-5/6 bg-white border border-gray p-4 lg:p-8 overflow-x-hidden h-fit">
			<div class="title_form flex flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-3 mb:mb-0">List of store reviews</h2>
			</div>

			{% if reviewClients|length >0 %}


				<!-- INPUT RESEARCH -->
				<div class="flex items-center mt-4 mb-2 relative">
					<input type="text" id="search" name="query" placeholder="Search by user last name, rate value, yes or no" class="border p-2 rounded w-full pr-10 " value="{{ query }}" maxlength="5">
					<button id="clearSearch" class="absolute font-bold right-5 text-gray-500 hidden">X</button>
				</div>
				<span id="error-message" class="text-red"></span>

				<!-- SPINNER -->
				<div id="loadingSpinner" class="hidden text-center my-4 text-primary ">
					<i class="fa-solid fa-spinner fa-2xl  animate-spin text-red-300  mx-auto"></i>
				</div>


				<!-- TABLE  -->
				<div class="flex flex-col">
					<div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
							<div id="table-container" class=" overflow-hidden" data-url="{{ path('show_store_admin') }}">
								{% include 'admin/_partials/review_store/_table_review_store.html.twig' with {'reviewClients':reviewClients} %}
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="flex justify-center flex-col items-center">
					<p class="text-2xl text-gray-600 font-normal my-3">No reviews found.</p>

				</div>
			{% endif %}
		</aside>
	</div>

	<script src="{{ asset('assets/js/admin/listTableElements.js') }}"></script>
{% endblock %}
