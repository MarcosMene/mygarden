{% extends 'base.html.twig' %}
{% block title %}My Garden - List review
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdminMarginBottom.html.twig') %}

	<div
		class="create-products w-full flex px-4 md:px-8 lg:px-16 mb-10 relative overflow-hidden ">

		<!-- MENU LEFT  -->
		{% include ('admin/_partials/menu_navigation.html.twig') %}

		<!-- RIGHT LIST -->
		<div class="w-full  bg-white border border-gray p-4 lg:p-8 overflow-x-hidden h-fit">
			<div
				class=" flex flex-col md:flex-row flex-wrap items-center  md:justify-between">

				<!--TITLE-->
				<h2 class="text-center md:text-start flex-1 mb-2 md:mb-0 text-black font-medium text-xl ">List of reviews</h2>
			</div>

			{% if reviews|length >0 %}

				<!-- INPUT RESEARCH -->
				<div class="flex items-center mt-4 mb-2 relative">
					<input type="text" id="search" name="query" placeholder="Search employees last name" class="border p-2 rounded w-full pr-10 " value="{{ query }}" maxlength="5">
					<button id="clearSearch" class="absolute font-bold right-5 text-gray hidden">X</button>
				</div>
				<span id="error-message" class="text-red"></span>

				<!-- SPINNER -->
				<div id="loadingSpinner" class="hidden text-center my-4 text-primary ">
					<i class="fa-solid fa-spinner fa-2xl  animate-spin text-red-300  mx-auto"></i>
				</div>

				<!-- TABLE  -->
				<div class="flex flex-col">
					<div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
							<div id="table-container" class=" overflow-hidden" data-url="{{ path('show_review_products') }}">
								{% include 'admin/_partials/review_products/_table_review_products.html.twig' with {'reviews':reviews} %}
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="flex justify-center flex-col items-center">
					<p class="text-2xl text-gray-600 font-normal my-3">No reviews found.</p>
					<p>Create a review.</p>
				</div>
			{% endif %}
		</div>
	</div>

	<!-- SCRIPT  -->
	<script src="{{ asset('assets/js/admin/listTableElements.js') }}"></script>
{% endblock %}
