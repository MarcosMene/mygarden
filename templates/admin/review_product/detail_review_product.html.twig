{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{product.name}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_review_products')}}" class="text-gray underline text-base  ">Back to reviews</a>
	</div>
	<div
		class="create_products w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<aside class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</aside>

		<!-- RIGHT PRODUCT -->
		<div class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
			<div class="title_form flex flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-4">
					Product Review Details
				</h2>
				<span class="sr-only">Product Review Detail</span>
			</div>

			<!--REVIEW-->
			<div
				class="flex justify-start flex-col md:flex-row">

				<!--PRODUCT IMAGE-->
				<div class="detail_product_img w-full md:w-1/3">
					<img src="{{ asset('upload/products/' ~ product.imageName) }}" alt="{{ product.name }}" class="w-full mr-4 mb-4">
				</div>

				<!--DESCRIPTION-->
				<div
					class="detail_product_description flex flex-col w-full  px-1 me-0 md:px-8">
					<!--USER NAME-->
					<div class="mb-4 flex flex-col md:flex-row">
						<p class="block font-bold text-base m-0">User Name:</p>
						<span class="text-gray-700 text-base m-0 ms-0 md:ms-2 capitalize">{{ review.user.firstName }}</span>
						<span class="text-gray-700 text-base m-0 ms-0 md:ms-1 capitalize">{{ review.user.lastName }}</span>
					</div>
					<!--PRODUCT NAME-->
					<div class="mb-4 flex flex-col md:flex-row">
						<p class="block font-bold text-base m-0">Product Review:</p>
						<span class="text-gray-700 text-base m-0 ms-0 md:ms-2 capitalize">{{ product.name }}</span>
					</div>

					<!--RATE-->
					<div class="mb-4 flex flex-col md:flex-row">
						<p class="block font-bold text-base m-0">Rating:</p>
						<span class="text-gray-700 text-base ms-2">{{ review.rate }}</span>
					</div>

					<!--REVIEW-->
					<div class="mb-4 flex flex-col ">
						<p class="block font-bold text-base m-0">Comment:</p>
						<p class="text-gray-700 text-base m-0">{{ review.review }}</p>
					</div>

					<!--CREATED AT-->
					<div class="mb-4 flex flex-col md:flex-row">
						<p class="block font-bold text-base m-0">Created at:</p>
						<span class="text-gray-700 text-base ms-0 md:ms-2">{{ product.createdAt|date('M d Y') }}</span>
					</div>

					<!--APPROVED-->
					<div class="mb-4 flex flex-col md:flex-row">
						<p class="block font-bold text-base m-0">Is approved:</p>
						<p class="text-gray-700 text-base m-0 ms-0 md:ms-2 {{review.isApproved == 1 ? 'text-green-600':'text-red'}} font-bold uppercase">{{review.isApproved == 1 ? 'yes':'no'}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
