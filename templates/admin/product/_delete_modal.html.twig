<!-- Modal Background -->
<div
	id="product-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
	<!-- Modal Box -->
	<div class="modal flex flex-col justify-center items-center h-screen ">
		<div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md flex flex-col justify-center items-center">
			<h2 class="text-2xl font-semibold text-red text-center">Delete action</h2>
			<p class="mt-4 text-gray-600 text-center">Are you sure you want to delete the product</p>
			<span id="delete-product-name" class="font-bold"></span>

			<!--BUTTONS-->
			<div class="mt-6 flex justify-center gap-4">
				<button id="cancel-button" class="py-2 px-4 text-base font-medium bg-green-700 text-white hover:text-black hover:bg-green-100 transition ease-in-out delay-100 rounded-sm capitalize">Cancel</button>
				<button id="confirm-button" class="py-2 px-4 text-base font-medium bg-red text-white hover:text-black hover:bg-pink-200 transition ease-in-out delay-100 rounded-sm capitalize">Confirm</button>
			</div>
		</div>
	</div>
</div>
