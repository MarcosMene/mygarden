{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{product_detail.slug}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_products')}}" class="text-gray underline text-base  ">back to products</a>
	</div>
	<div
		class="create_products w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>

		<!-- RIGHT PRODUCT -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
			<div class="title_form flex  flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Product details</h2>
			</div>

			<!-- PRODUCT  -->
			<div
				class="detail_product flex flex-col lg:flex-row mt-4 lg:mt-0">

				<!-- PRODUCT IMAGE  -->
				<div class="detail_product_img w-full lg:w-1/5">
					<img src="{{ asset('upload/products/' ~ product_detail.imageName) }}" alt="{{ product_detail.name }}" loading="lazy">
				</div>

				<!-- PRODUCT DESCRIPTION  -->
				<div
					class="detail_product_description flex flex-col w-full lg:w-3/5 px-1 me-0 lg:px-8">

					<!-- NAME AND SLUG  -->
					<div
						class="detail_product_name flex flex-col lg:flex-row justify-start ">
						<!-- NAME -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">Name:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.name }}</p>
						</div>

						<!-- SLUG -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">URL:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.slug }}</p>
						</div>
					</div>

					<!-- CATEGORY AND COLOR  -->
					<div
						class="detail_product_name flex flex-col lg:flex-row justify-start">

						<!-- CATEGORY -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">Category:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.category }}</p>
						</div>

						<!-- COLOR -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">Color:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.colorProduct }}</p>
						</div>
					</div>
					<!-- PRICE AND TAX  -->
					<div
						class="detail_product_name flex flex-col lg:flex-row justify-start">

						<!-- CATEGORY -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">Price:</p>
							<p class="font-normal text-lg mb-2 ms-1">${{ product_detail.price|price }}</p>
						</div>

						<!-- TAX -->
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">VAT:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.tva }}</p>
						</div>
					</div>

					<!-- PROMOTION -->


					<div class="flex  me-0 lg:me-6">
						<p class="font-semibold text-lg">Promotion:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.promotion }}</p>
					</div>

					<!-- SUGGESTION AND DESCRIPTION  -->
					<div
						class="detail_product_name flex flex-col justify-start">

						<!-- SUGGESTION -->
						<div class="flex  me-0 lg:me-6">
							<p class="font-semibold text-lg">Is suggestion:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{product_detail.isSuggestion == 1 ? 'yes':'no'}}</p>
						</div>

						<!-- DESCRIPTION -->
						<div class="flex flex-col me-0 lg:me-6">
							<p class="font-semibold text-lg">Description:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ product_detail.description }}</p>
						</div>

					</div>
				</div>
			</div>
		</aside>
	</div>
{% endblock %}
