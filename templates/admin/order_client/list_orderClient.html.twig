{% extends 'base.html.twig' %}
{% block title %}My Garden - List order client
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdminMarginBottom.html.twig') %}

	<div
		class="list_orderClient w-full flex px-4 md:px-8 lg:px-16 mb-10 relative overflow-hidden">

		<!-- MENU LEFT  -->
		{% include ('admin/_partials/menu_navigation.html.twig') %}

		<!-- RIGHT LIST -->
		<div class="w-full bg-white border border-gray p-4 lg:p-8 overflow-x-hidden h-fit">
			<div
				class="title_form flex flex-col md:flex-row flex-wrap items-center  md:justify-between">

				<!--TITLE-->
				<h2 class="text-center md:text-start flex-1 mb-2 md:mb-0 text-black font-medium text-xl ">List of orders</h2>
			</div>

			{% if orders|length >0 %}

				<!-- INPUT RESEARCH -->
				<div class="flex items-center mt-4 mb-2 relative">
					<input type="text" id="search" name="userName" placeholder="Search last name of user or ID of order" class="border p-2 rounded w-full pr-10 " value="{{ query }}" maxlength="5">
					<button id="clearSearch" class="absolute font-bold right-5 text-gray hidden">X</button>
				</div>
				<span id="error-message" class="text-red"></span>

				<!-- SPINNER -->
				<div id="loadingSpinner" class="hidden text-center my-4 text-primary ">
					<i class="fa-solid fa-spinner fa-2xl  animate-spin text-red-300  mx-auto"></i>
				</div>

				<!-- TABLE  -->
				<div class="flex flex-col">
					<div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
						<div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
							<div class="overflow-hidden" id="table-container" data-url="{{ path('show_order_client') }}">

								{% include 'admin/_partials/orders/_table_orders.html.twig' with {'orders':orders} %}
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="flex justify-center flex-col items-center">
					<p class="text-2xl text-gray-600 font-normal my-3">No orders found.</p>
				</div>
			{% endif %}
		</div>
	</div>

	<!-- SCRIPT  -->
	<script src="{{ asset('assets/js/admin/listTableElements.js') }}"></script>
{% endblock %}
