{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{header_detail.categoryProduct}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_headers')}}" class="text-gray underline text-base  ">back to headers</a>
	</div>
	<div
		class="create_headers w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>

		<!-- RIGHT HEADER -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
			<div class="title_form flex  flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Product details</h2>
			</div>

			<!-- HEADER  -->
			<div
				class="detail_header flex flex-col lg:flex-row mt-4 lg:mt-0">

				<!-- HEADER IMAGE  -->
				<div class="detail_header_img w-full lg:w-1/3">
					<img src="{{ asset('upload/headers/' ~ header_detail.imageName) }}" alt="{{ header_detail.categoryProduct }}" loading="lazy">
				</div>

				<div
					class="detail_header_description flex flex-col w-full px-1 me-0 lg:px-8">

					<!-- TITLE -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Category:</p>
						<p class="font-normal text-lg mb-2 ms-1 capitalize">{{ header_detail.categoryProduct }}</p>
					</div>
					<!-- CONTENT -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Title:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.content }}</p>
					</div>
					<!-- PARAGRAPH -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Paragraph:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.paragraph }}</p>
					</div>


					<!-- TITTLE BUTTON -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Button title:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.buttonTitle }}</p>
					</div>

					<!-- BUTTON URL -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Button link:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.buttonLink }}</p>
					</div>
					<!-- ORDER -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Order appear:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.orderAppear }}</p>
					</div>

					<!-- SIDE IMAGE  -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Side of image:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ header_detail.sideImage }}</p>
					</div>

					<!-- BACKGROUND COLOR -->
					<div class="flex items-center me-0 lg:me-6 gap-4">
						<p class="font-semibold text-lg">Background color:</p>
						<div class="p-2 rounded-full h-10 w-10 border border-gray" style="background-color:{{header_detail.backgroundColor}}; "></div>
					</div>
				</div>
			</div>
		</aside>
	</div>

{% endblock %}
