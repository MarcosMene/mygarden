{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{gallery_detail.name}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_galleries')}}" class="text-gray underline text-base  ">back to galleries</a>
	</div>
	<div
		class="create_galleries w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>

		<!-- RIGHT GALLERY -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-2 lg:p-8 h-fit">
			<div class="title_form flex  flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Gallery details</h2>
			</div>

			<!-- GALLERY  -->
			<div
				class="detail_gallery flex flex-col lg:flex-row mt-4 lg:mt-0">

				<!-- GALLERY IMAGE  -->
				<div class="detail_gallery_img w-full lg:w-1/5">
					<img src="{{ asset('upload/galleries/' ~ gallery_detail.imageName) }}" alt="{{ gallery_detail.name }}" loading="lazy">
				</div>
				<!-- GALLERY NAME  -->
				<div class="detail_gallery_description flex flex-col w-full lg:w-3/5 px-1 me-0 lg:px-8">
					<div class="detail_gallery_name flex flex-col lg:flex-row justify-start ">
						<div class="flex me-0 lg:me-6">
							<p class="font-semibold text-lg">Name:</p>
							<p class="font-normal text-lg mb-2 ms-1">{{ gallery_detail.name }}</p>
						</div>
					</div>
				</div>
			</div>
		</aside>
	</div>

{% endblock %}
