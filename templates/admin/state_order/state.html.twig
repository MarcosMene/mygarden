{% if order.state == 1 %}
<div class="bg-slate-200 text-black    px-2 py-1 capitalize font-medium rounded ">
waiting for payment
</div>
{% elseif order.state == 2 %}
<div class="bg-green-500 text-white   px-2  py-1 capitalize font-medium rounded ">
Paid
</div>
{% elseif order.state == 3 %}
<div class="bg-sky-500 text-white   px-2  py-1 capitalize font-medium rounded ">
In progress
</div>
{% elseif order.state == 4 %}
<div class="bg-yellow-500 text-white   px-2  py-1 capitalize font-medium rounded ">
Shipped
</div>
{% elseif order.state == 5 %}
<div class="bg-red-500 text-white   px-2  py-1 capitalize font-medium rounded ">
Cancel
</div>
{% endif %}