{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{category.slug}}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_categories')}}" class="text-gray underline text-base  ">Back to categories</a>
	</div>
	<div
		class="create_category w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>

		<!-- RIGHT CATEGORY -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-2 lg:p-8 h-fit">
			<div class="title_form flex  flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Category details</h2>
			</div>

			<!-- CATEGORY  -->
			<div
				class="detail_category flex flex-col lg:flex-row mt-4 lg:mt-0">

				<!-- CATEGORY IMAGE  -->
				<div class="detail_category_img w-full lg:w-1/5">

					{% if category.imageName %}
						<img src="{{ asset('upload/categories/' ~ category.imageName) }}" alt="{{ category.name }}" loading="lazy"></td>
				{% else %}
					<img src="{{ asset('assets/images/image_not_available.jpg') }}" alt="{{ category.name }}" loading="lazy">
				{% endif %}
			</div>
			<!-- CATEGORY DESCRIPTION  -->
			<div
				class="detail_category_description flex flex-col w-full lg:w-3/5 px-1 me-0 lg:px-8">
				<!-- NAME AND SLUG  -->
				<div
					class="detail_category_name flex flex-col lg:flex-row justify-start ">
					<!-- NAME -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Name:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ category.name }}</p>
					</div>
					<!-- SLUG -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">URL:</p>
						<p class="font-normal text-lg mb-2 ms-1">{{ category.slug }}</p>
					</div>
				</div>
			</div>
		</div>
	</aside>
</div>{% endblock %}
