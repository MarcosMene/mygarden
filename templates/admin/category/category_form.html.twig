{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{ form.vars.value.id ? 'Edit Category' : 'Create New Category' }}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	<h1 class="w-full flex px-8 lg:px-16 mt-6 capitalize text-xl font-semibold">My garden - flower shop</h1>
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_categories')}}" class="text-gray underline text-base  ">Back to categories</a>
	</div>
	<div
		class="create_products w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>
		<!-- RIGHT CREATE FORM -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-2 lg:p-8 h-fit">
			<div class="title_form flex flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-4">Create new category</h2>
			</div>

			{{ form_start(form) }}

			<!-- NAME AND CATEGORY -->
			<div class="flex flex-col md:flex-row justify-between gap-1 md:gap-12 mb-4">
				<div class=" w-full  text-base">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
					<div class="form-error">
						{{ form_errors(form.name) }}
						<div id="categoryName_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

			<div
				class="flex flex-col lg:flex-row justify-between gap-1 lg:gap-12 mb-4">

				<!-- IMAGE  -->
				<div class=" w-full  text-base">
					{{ form_label(form.imageFile) }}
					{{ form_widget(form.imageFile) }}
					<div class="form-error">
						{{ form_errors(form.imageFile) }}
						<div id="categoryImage_error" hidden class="text-sm text-red"></div>
					</div>
				</div>

			</div>

			<!-- SUBMIT BUTTON  -->
			<div class="text-center mt-4">
				<button type="submit" id="category_submit" class=" p-2.5 text-sm font-medium text-white bg-primary  border border-primary focus:outline-none focus:ring-primary">
					{{ form.vars.value.id ? 'Update Category' : 'Create Category' }}
					<span class="sr-only">{{ form.vars.value.id ? 'Update Category' : 'Create Category' }}
						button</span>
				</button>
			</div>
			{{ form_end(form) }}
		</aside>
	</div>

	<!-- VALIDATE CREATE PRODUCT WITH JS  -->
	<script src="{{ asset('assets/js/admin/createCategory.js') }}"></script>
{% endblock %}
