{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{post_detail.name}}
{% endblock %}

{% block body %}
	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<a href="{{path('show_posts')}}" class="text-gray underline text-base  ">Back to posts</a>
</div>
<div
	class="create_posts idll flex px-8 lg:px-16 mb-10">

	<!-- MENU LEFT  -->
	<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
		<div class="sticky top-0">
			{% include ('admin/_partials/menu_navigation.html.twig')%}
		</div>
	</div>

	<!-- RIGHT POST -->
	<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
		<div class="title_form flex  flex-wrap justify-between">
			<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Color detail</h2>
		</div>

		<!-- POST  -->
		<div
			class="detail_category flex flex-col lg:flex-row mt-4 lg:mt-0">

			<!-- POST NAME  -->
			<div class="detail_category_description flex flex-col w-full lg:w-3/5 px-1 me-0 lg:px-8">
				<div
					class="detail_category_name flex flex-col lg:flex-row justify-start ">
					<!-- NAME -->
					<div class="flex me-0 lg:me-6">
						<p class="font-semibold text-lg">Name:</p>
						<p class="font-normal text-lg mb-2 ms-1 capitalize">{{ post_detail.name }}</p>
					</div>
				</div>
			</div>
		</div>
	</aside>
</div>{% endblock %}
