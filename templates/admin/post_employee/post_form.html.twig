{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{ form.vars.value.id ? 'Edit post of employee' : 'Create new post of employee' }}
{% endblock %}

{% block body %}


	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_posts')}}" class="text-gray underline text-base  ">Back to posts</a>
	</div>
	<div
		class="create_posts w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>
		<!-- RIGHT CREATE FORM -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
			<div class="title_form flex flex-wrap justify-between">
				<h2 class=" text-black font-medium text-xl mb-4">{{ form.vars.value.id ? 'Update Post' : 'Create Post' }}
					<span class="sr-only">{{ form.vars.value.id ? 'Update Post' : 'Create Post' }}
						button</span>
				</h2>
			</div>

			<!--ERROR MESSAGE-->
			<div id="error_messages" class="hidden text-center p-4 mb-4 text-sm rounded-lg bg-red-100 text-red-700 relative" role="alert"></div>

			{{ form_start(form) }}

			<!-- NAME COLOR -->
			<div class="flex flex-col md:flex-row justify-between gap-1 md:gap-12 mb-4">
				<div class=" w-full  text-base">
					{{ form_label(form.name) }}
					{{ form_widget(form.name, {
        'attr': {
            'class': (attr.class|default('w-full rounded bg-white p-3 shadow shadow-gray-100 mt-2 appearance-none outline-none py-2 px-3 leading-4 text-black py-1') ~ (form_errors(form.name) ? ' is-invalid' : ''))
        }
    }) }}
					<div class="form-error">
						{{ form_errors(form.name) }}
						<div id="postName_error" hidden class="text-sm text-red"></div>
					</div>
				</div>
			</div>

			<!-- SUBMIT BUTTON  -->
			<div class="text-center mt-4">
				<button type="submit" id="posts_submit" class=" p-2.5 text-sm font-medium text-white bg-primary  border border-primary focus:outline-none focus:ring-primary">
					{{ form.vars.value.id ? 'Update Post' : 'Create Post' }}
					<span class="sr-only">{{ form.vars.value.id ? 'Update Post' : 'Create Post' }}
						button</span>
				</button>
			</div>
			{{ form_end(form) }}
		</aside>
	</div>

	<!-- VALIDATE CREATE PRODUCT WITH JS  -->
	<script src="{{ asset('assets/js/admin/createPostEmployee.js') }}"></script>
{% endblock %}
