{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{schedule.day}}
{% endblock %}

{% block body %}
	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<a href="{{path('show_schedules')}}" class="text-gray underline text-base  ">Back to schedules</a>
</div>
<div
	class="create_color idll flex px-8 lg:px-16 mb-10">

	<!-- MENU LEFT  -->
	<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
		<div class="sticky top-0">
			{% include ('admin/_partials/menu_navigation.html.twig')%}
		</div>
	</div>

	<!-- RIGHT SCHEDULE -->
	<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-2 lg:p-8 h-fit">
		<div class="title_form flex  flex-wrap justify-between">
			<h2 class=" text-black font-medium text-xl mb-0 md:mb-4">Schedule detail</h2>
		</div>


		<div class="detail_schedule flex flex-col lg:flex-row mt-4 lg:mt-0">

			<div
				class="detail_schedule_description flex flex-col w-full lg:w-3/5 px-1 me-0 lg:px-8">

				<!-- DAY -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Day:</p>
					<p class="font-normal text-lg mb-2 ms-1">{{ schedule.day }}</p>
				</div>
				<!-- OPEN HOUR -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Open hours
						<span class="font-normal">(morning):</span>
					</p>
					<p class="font-normal text-lg mb-2 ms-1">{{ schedule.openTime|date('H:i') }}h</p>
				</div>
				<!-- CLOSE HOUR -->
				<div class="flex me-0 lg:me-6">
					<p class="font-semibold text-lg">Close hours
						<span class="font-normal">(afternoon):</span>
					</p>
					<p class="font-normal text-lg mb-2 ms-1">{{ schedule.closeTime|date('H:i') }}h</p>
				</div>
			</div>
		</div>
	</aside>
</div>{% endblock %}
