{% extends 'base.html.twig' %}
{% block title %}My Garden -
	{{ form.vars.value.id ? 'Edit Schedule' : 'Create New Schedule' }}
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdmin.html.twig') %}
	<div class="back_to text-end px-8 lg:px-16">
		<a href="{{path('show_schedules')}}" class="text-gray underline text-base  ">back to schedules</a>
	</div>
	<div
		class="create_schedules w-full flex px-8 lg:px-16 mb-10">

		<!-- MENU LEFT  -->
		<div class="menu_admin  flex flex-col w-1/3 md:w-1/6 p-2 lg:p-8 bg-gray-50">
			<div class="sticky top-0">
				{% include ('admin/_partials/menu_navigation.html.twig')%}
			</div>
		</div>
		<!-- RIGHT CREATE FORM -->
		<aside class="w-2/3 md:w-5/6 bg-white border border-gray p-4 lg:p-8 h-fit">
			<div class="title_form flex flex-wrap justify-start items-center p-2">
				<h2 class=" text-black font-medium text-xl">
					{{ form.vars.value.id ? 'Update Schedule' : 'Create Schedule' }}
					<span class="sr-only">{{ form.vars.value.id ? 'Update Schedule' : 'Create Schedule' }}</h2>
					<span class="text-red text-sm font-bold ms-4">* If hour equal 00, shop store is closed.</span>
				</div>

				<!--ERROR MESSAGE-->
				<div id="error_messages" class="hidden text-center p-4 mb-4 text-sm rounded-lg bg-red-100 text-red-700 relative" role="alert"></div>

				{{ form_start(form) }}
				<div
					class="flex flex-wrap justify-between items-start">
					<!-- DAY -->

					<div class=" text-base">
						{{ form_label(form.day) }}
						{{ form_widget(form.day, {
        'attr': {
            'class': (attr.class|default('w-full rounded bg-white p-3 shadow shadow-gray-100 shadow shadow-gray-100 mt-2  py-2 px-3 text-gray-500') ~ (form_errors(form.day) ? ' is-invalid' : ''))
        }
    }) }}
						<div class="form-error">
							{{ form_errors(form.day) }}
							<div id="shopDay_error" hidden class="text-sm text-red"></div>
						</div>
					</div>

					<!-- OPEN TIME -->
					<div class=" text-base">
						{{ form_label(form.openTime) }}
						{{ form_widget(form.openTime) }}
						<div class="form-error">
							{{ form_errors(form.openTime) }}
							<div id="openTime_error" hidden class="text-sm text-red"></div>
						</div>
					</div>

					<!-- CLOSE TIME -->
					<div class=" text-base">
						{{ form_label(form.closeTime) }}
						{{ form_widget(form.closeTime) }}
						<div class="form-error">
							{{ form_errors(form.closeTime) }}
							<div id="closeTime_error" hidden class="text-sm text-red"></div>
						</div>
					</div>
				</div>

				<!-- SUBMIT BUTTON  -->
				<div class="text-center mt-4">
					<button type="submit" id="schedule_submit" class=" p-2.5 text-sm font-medium text-white bg-primary  border border-primary focus:outline-none focus:ring-primary mt-4">
						{{ form.vars.value.id ? 'Update Schedule' : 'Create Schedule' }}
						<span class="sr-only">{{ form.vars.value.id ? 'Update Schedule' : 'Create Schedule' }}
							button</span>
					</button>
				</div>
				{{ form_end(form) }}
			</aside>
		</div>

		<!-- VALIDATE CREATE schedule WITH JS  -->
		<script src="{{ asset('assets/js/admin/createschedule.js') }}"></script>
	{% endblock %}
