{% extends 'base.html.twig' %}
{% block title %}My Garden - List color of product
{% endblock %}

{% block body %}

	<!-- MENU  -->
	{% include ('admin/components/titleDashboardAdminMarginBottom.html.twig') %}

	<div
		class="list_color w-full flex px-4 md:px-8 lg:px-16 mb-10 relative overflow-hidden">


		<!-- MENU LEFT  -->

		{% include ('admin/_partials/menu_navigation.html.twig') %}

		<!-- RIGHT LIST -->
		<div class="w-full  bg-white border border-gray p-4 lg:p-8 overflow-x-hidden h-fit">
			<div
				class="title_form flex flex-col md:flex-row flex-wrap items-center  md:justify-between">

				<!--TITLE-->
				<h2 class="text-center md:text-start flex-1 mb-2 md:mb-0 text-black font-medium text-xl ">List of colors</h2>
				<a href="{{path('create_color')}}" class="py-2 px-4 w-fit hover:bg-white hover:text-primary transition ease-in-out delay-100 capitalize border border-primary text-base font-medium text-white  bg-primary rounded-sm group-invalid:pointer-events-none group-invalid:opacity-60 group-invalid:disabled">
					Create color
				</a>
			</div>

			{% if colors|length >0 %}

				<!-- TABLE  -->
				<div class="flex flex-col w-full md:w-1/2 mx-auto">
					<div class="overflow-x-auto sm:-mx-6 lg:-mx-8 text-center">
						<div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
							<div class="overflow-hidden">
								<table class="min-w-full text-sm font-normal text-surface dark:text-white mt-4">
									<thead class="border-b border-neutral-200 bg-white font-medium dark:border-white/10 dark:bg-body-dark">
										<tr>
											<th scope="col" class=" text-left ps-4 w-full">Name</th>
											<th scope="col" class="w-fit">Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for color in colors %}
											<tr class="border-b border-neutral-200 text-base text-left font-normal {{loop.index is odd ? 'bg-gray-50':'bg-white'}}">
												<td class="whitespace-nowrap py-2 ps-4 capitalize">{{color.color}}</td>

												<!--ACTION BUTTONS-->
												<td class="whitespace-nowrap p-2 text-left">
													<div class="h-full flex justify-between items-center gap-4">

														<a href="{{path('edit_color',{id: color.id})}}" class="flex flex-col items-center text-black text-xs font-medium transition duration-200 hover:scale-125">
															<i class="fa-solid fa-pencil text-black"></i>
															Edit
														</a>

														<!-- Delete button triggers the modal, not a form submission -->
														<button type="button" class="flex flex-col items-center text-red text-xs font-medium transition duration-200 hover:scale-125" onclick="openDeleteModal({{ color.id }}, '{{ color.color }}')">
															<i class="fa-regular fa-trash-can"></i>
															Delete
														</button>

														<!-- Hidden form for deletion -->
														<form id="delete-form-{{ color.id }}" action="{{ path('delete_color', {id: color.id}) }}" method="POST" class="hidden">
															<input type="hidden" name="_token" value="{{ csrf_token('deleteColor' ~ color.id) }}">
														</form>
													</div>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="flex justify-center flex-col items-center">
					<p class="text-2xl text-gray-600 font-normal my-3">No colors found.</p>
					<p>Create a color.</p>
				</div>
			{% endif %}
		</div>
	</div>

{% endblock %}
